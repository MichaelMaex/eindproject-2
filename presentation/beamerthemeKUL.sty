	\setbeamercolor{Footer}{fg=white,bg=KUL_blue}
	\setbeamerfont{Footer_Font}{size=\footnotesize}
	\leavevmode%
	\hbox{%
	\begin{beamercolorbox}[wd=\paperwidth,ht=0.40cm,dp=0.15cm,center]{Footer}%
	\usebeamerfont{Footer_Font}
	\begin{minipage}[t]{0.15\textwidth}
			\insertframenumber{}/\inserttotalframenumber{}
	\end{minipage}
	\begin{minipage}[t]{0.60\textwidth}
			\centering
			\insertshorttitle
	\end{minipage}
	\begin{minipage}[t]{0.15\textwidth}

		\flushright	\includegraphics[width=1.7cm]{Pictures/logo.jpg}
	\end{minipage}
	\end{beamercolorbox}}%
	}

