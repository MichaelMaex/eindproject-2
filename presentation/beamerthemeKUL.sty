%----------------------------------
% title page
%----------------------------------


\defbeamertemplate*{title page}{customized}[1][]
{
  % Put title in blue box
  \setbeamerfont{title1}{size=\Large, series=\bf}
  \setbeamerfont{title2}{size=\large, series=\it}
  \setbeamerfont{institute1}{size=\small, series=\it}
  \setbeamerfont{Author}{size=\normalsize, series=\bf}
  \setbeamerfont{Date}{size=\normalsize}%, series=\rm}
% FIRST BOX
  \begin{beamercolorbox}[sep=0em,colsep*=5pt,wd=\paperwidth,ht=0.01\paperheight,dp=0.1cm]{White}
  \end{beamercolorbox}
  
% SECOND BOX
\begin{beamercolorbox}[sep=0em,colsep*=5pt,wd=1\paperwidth,ht=0.45\paperheight,dp=1cm]{title1}
 \hspace{0.5cm}
  \begin{minipage}[t]{0.70\linewidth}
  \begin{flushleft}
\usebeamerfont{title1}\inserttitle \\ \vspace{0.1cm}
 	\usebeamerfont{title2}\insertsubtitle
\end{flushleft}
\end{minipage}
\end{beamercolorbox}
  
% BOX 3
  \nointerlineskip
   \begin{beamercolorbox}[sep=0em,colsep*=5pt,wd=\paperwidth,ht=0.32\paperheight,dp=2.5cm]{title2}
  \hspace{0.5cm}
  \begin{minipage}[t]{1.05\linewidth}
  \usebeamerfont{Author}\insertauthor \\
  \vfill
 \usebeamerfont{institute1}\insertinstitute 
 \hfill \usebeamerfont{Date}\normalfont{\insertdate}
  \end{minipage}
  \end{beamercolorbox}
% logos
  \Put(-10,642){\includegraphics[width=3cm]{Pictures/logo.jpg}}
  \Put(230,476){\includegraphics[width=2.35cm]{Pictures/sleutel.png}}
  \par
}

